@inherits LayoutComponentBase

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/home">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Admin</li>
    </ol>
</nav>

<div class="bg-info text-white p-2">
    <div class="container-fluid">
        <div class="row">

            <div class="col">
                <span class="navbar-brand m-lg-2">Bookstore Administration</span>
            </div>

            <div class="col-2 text-right">
                <a class="btn btn-sm btn-primary" href="/account/logout">Log Out</a>
            </div>

        </div>
    </div>
</div>

<br />

<div class="container-fluid">

    <div class="row p-2">

        <div class="col-2">

            <div class="d-grid gap-2">
                <NavLink class="btn btn-outline-primary" href="/admin/booklist"
                         ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Books</NavLink>

                <NavLink class="btn btn-outline-primary" href="/admin/purchases"
                         ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Orders</NavLink>
            </div>

        </div>

        <div class="col">
            @Body
        </div>

    </div>

</div>