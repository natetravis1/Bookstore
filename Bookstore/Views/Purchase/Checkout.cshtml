@{
}

@model Purchase

<h2>Check out now</h2>

<p>Please enter your details, and we will ship your book/s as soon as possible!</p>

<form method="post" asp-controller="Purchase" asp-action="Checkout">

    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- gets user name -->
    <h4>Ship to</h4>
    <div class="form-group">
        <label asp-for="Name">Name:</label><input asp-for="Name" class="form-control" />
    </div>

    <br />

    <!-- gets address lines 1, 2, & 3 -->
    <h4>Address</h4>
    <div class="form-group">
        <label asp-for="AddressLine1">Address Line 1:</label>
        <input asp-for="AddressLine1" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AddressLine2">Address Line 2: (optional)</label>
        <input asp-for="AddressLine2" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AddressLine3">Address Line 3: (optional)</label>
        <input asp-for="AddressLine3" class="form-control" />
    </div>

    <!-- gets users city, state, zip, and country-->
    <div class="form-group">
        <label asp-for="City">City:</label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="State">State:</label>
        <input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Zip">Zip:</label>
        <input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Country">Country:</label>
        <input asp-for="Country" class="form-control" />
    </div>

    <br />

    <!-- button to submit order -->
    <div class="float-end">
        <input class="btn btn-primary" type="submit" value="Place Order" />
    </div>

</form>